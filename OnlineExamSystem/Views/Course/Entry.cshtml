@model Models.Course
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Course-Entry</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container">
    
    <h1>Set up Course</h1>
    
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#basic" aria-controls="basic" role="tab" data-toggle="tab">Basic INFO</a></li>
        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Create Trainer</a></li>
        <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Create Exam</a></li>

    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="basic">
            <br/>
            <form action="" method="post">
                <div class="form-group">
                    <label>Organization :</label>
                    @Html.DropDownListFor(c => c.OrganizationId, Model.organizationSlItems, htmlAttributes: new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Name :</label>
                    <input type="text" name="Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Code :</label>
                    <input type="text" name="Code" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Course Duration (hrs) :</label>
                    <input type="text" name="Duration" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Credit :</label>
                    <input type="text" name="Credit" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Outline :</label>
                    <textarea class="form-control" name="Outline" rows="5"></textarea>
                </div>

                <div class="form-group">
                    <input type="submit" name="submit" value="Save" class="btn btn-info" />
                </div>
            </form>
        </div>

        <div role="tabpanel" class="tab-pane" id="profile">
            @*<div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(c => c.Name, htmlAttributes: new {@class = "col-md-2"})
                            <div class="col-md-10">
                                @Html.TextBoxFor(c => c.Name, htmlAttributes: new {@class = "form-control"})
                                @Html.ValidationMessageFor(c => c.Name, null, htmlAttributes: new {@class = "text-danger"})
                            </div>
                        </div>*@
        </div>

        <div role="tabpanel" class="tab-pane" id="messages">

        </div>

    </div>

</div>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
