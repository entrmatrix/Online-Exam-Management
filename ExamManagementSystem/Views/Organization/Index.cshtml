@model Models.SearchCriteria.OrganizationSearchCriteria

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container">
    <h1 class="text-primary">All Organization Information</h1>
    <hr />

    @using (Html.BeginForm("Index", "Organization", FormMethod.Get, new { @class = "form-horizontal" }))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Name" class="col-md-3 control-label">Name</label>
                    <div class="col-md-9">
                        <input id="searchTextbox" name="Name" class="form-control" type="text" placeholder="Name" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="Code" class="col-md-3 control-label">Code</label>
                    <div class="col-md-9">
                        <input id="searchTextbox" name="Code" class="form-control" type="text" placeholder="Code" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Address" class="col-md-3 control-label">Address</label>
                    <div class="col-md-9">
                        <input id="searchTextbox" name="Address" class="form-control" type="text" placeholder="Address" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="ContactNo" class="col-md-3 control-label">Contact No</label>
                    <div class="col-md-9">
                        <input id="searchTextbox" name="ContactNo" class="form-control" type="text" placeholder="ContactNo" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 pull-right">
                        <input id="searchButton" type="submit" value="Search" class="btn-success form-control" />
                    </div>
                </div>
            </div>
        </div>
    }
    
    <hr/>

    <p>
        @*@Html.ActionLink("Create New", "Entry", "Organization")*@
        @*@Html.ActionLink("Create New", "CourseEntry", "Course")*@
    </p>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model.OrganizationLists)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td>
                    @*@Html.ActionLink(item.Courses.Count.ToString(), "Index", "Course", new {id = item.Id }, null)*@
                    <a href="~/Course?OrganizationId=@item.Id">@item.Courses.Count</a>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id=item.Id}) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id}) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id})
                </td>
            </tr>
        }

    </table>
    </div>
</div>
</body>

</html>
